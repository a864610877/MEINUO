        <li><a href="/JuMeiMall/JuMeiMallSearchIndex?commodityCategoryId=@Model.CateMallList[3].commodityCategoryId"><img src="/images/menu4.png" alt=""><p>@Model.CateMallList[3].Categoryname</p></a></li>
        <li><a href="/JuMeiMall/JuMeiMallSearchIndex?commodityCategoryId=@Model.CateMallList[4].commodityCategoryId"><img src="/images/menu5.png" alt=""><p>@Model.CateMallList[4].Categoryname</p></a></li>
        <li><a href="/JuMeiMall/JuMeiMallSearchIndex?commodityCategoryId=@Model.CateMallList[5].commodityCategoryId"><img src="/images/menu6.png" alt=""><p>@Model.CateMallList[5].Categoryname</p></a></li>
        <li><a href="/JuMeiMall/JuMeiMallSearchIndex?commodityCategoryId=@Model.CateMallList[6].commodityCategoryId"><img src="/images/menu7.png" alt=""><p>@Model.CateMallList[6].Categoryname</p></a></li>
