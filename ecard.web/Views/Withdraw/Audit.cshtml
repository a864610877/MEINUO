    <script>
        $(function () {
            //同意审核
            $("#audit").click(function () {
                if (confirm("确定同意审核吗？")) {
                    var withdrawId = $("#withdrawId").val();
                    var remark = $("#remark").val();
                    $.ajax({
                        url: "/Withdraw/AuditWithdraw",
                        data: { id: withdrawId, remark: remark },
                        type: "post",
                        //cache: false,
                        dataType: "json",
                        async: false,
                        success: function (data) {
                            if (data.Code == 0) {
                                $("#audit").attr("class", "cancel");
                                $("#audit").attr("disabled", true);
                                $("#Noaudit").attr("class", "cancel");
                                $("#Noaudit").attr("disabled", true);
                                $("#withstate").text("成功")
                                $("#msg").text("成功");
                                $("#msg").attr("class", "Checkgreen");
                            }
                            else {
                                $("#msg").html(data.CodeText);
                                $("#msg").attr("class", "Checkred");
                            }

                        },
                        error: function () {
                            window.location.href = "/Home/Error";
                        }
                    });
                }
            });
            //不同意审核
            $("#Noaudit").click(function () {
                if (confirm("确定不同意审核吗？")) {
                    var withdrawId = $("#withdrawId").val();
                    var remark = $("#remark").val();
                    $.ajax({
                        url: "/Withdraw/NotAuditWithdraw",
                        data: { id: withdrawId, remark: remark },
                        type: "post",
                        dataType: "json",
                        async: false,
                        success: function (data) {
                            if (data.Code == 0) {
                                $("#audit").attr("class", "cancel");
                                $("#audit").attr("disabled", true);
                                $("#Noaudit").attr("class", "cancel");
                                $("#Noaudit").attr("disabled", true);
                                $("#msg").text("成功");
                                $("#msg").attr("class", "Checkgreen");
                                $("#withstate").text("成功")
                            }
                            else {
                                $("#msg").text(data.CodeText);
                                $("#msg").attr("class", "Checkred");
                            }
                        },
                        error: function () {

                            window.location.href = "/Home/Error";
                        }
                    })
                }
            });
        });
    </script>
    <body>

        <div id="step-read" class="stepdiv">

