                                    <td >@Model.Item.amount</td>
                                </tr>
                                <tr>
                                    <td class="lefttd">审核人：</td>
                                    <td class="righttd">@Model.Item.Operator</td>
                                    <td class="lefttd">状态：</td>
                                    
                                        @if (Model.Item.state==1)
                                        {
                                           <td id="withstate" class="righttd"> 待审核</td>
                                        }
                                        else if (Model.Item.state == 2)
                                        {
                                            <td id="withstate" class="righttd"> 成功</td>
