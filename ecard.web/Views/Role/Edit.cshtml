@model EcardModelItem<EditRole>
@{ 
    ViewDataDictionary views = new ViewDataDictionary(ViewData);
    views["propertyName"] = "Item.Permissions";
    ViewDataDictionary views1 = new ViewDataDictionary(ViewData);
    views1["propertyName"] = "Item.Users";
}
@using (Html.BeginForm())
{  
    <div class="place">
    <span>位置：</span>
    <ul class="placeul">
    <li><a href="#">首页</a></li>
    <li><a href="#">@Model.Localize("title")</a></li>
    </ul>
</div>
        <div class="create_div">
   <ul class="forminfo">
        @Html.EditorFor(x => x.Item)
    </ul><div style=" clear:both" />
        @Html.Partial("MultiCheckList", Model.Item.Permissions, views)
         @Html.Partial("MultiCheckList", Model.Item.Users, views1)
        <div style="text-align: left; margin-left: 45px; margin-top: 15px;">
            <input type="submit" class="scbtn" value="提交" />
            @Html.ActionLink("List")</div>
    </div>
    <script type="text/javascript">
        $(function () {
            $(".create_field input").focus(function () {
                $("[forprop='" + $(this).attr("id") + "']").show("1500");
            });
            $(".create_field select").click(function () {
                $("[forprop='" + $(this).attr("id") + "_Key']").show("1500");
            });
            $(".create_field input").blur(function () {
                $("[forprop='" + $(this).attr("id") + "']").hide("1500");
            });
            $(".create_field select").mouseleave(function () {
                $("[forprop='" + $(this).attr("id") + "_Key']").hide("1500");
            });
        });
    
    </script>
}