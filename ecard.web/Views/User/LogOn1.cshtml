@model LogOnModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>登录 -  微信管理平台</title>
    <meta name="keywords" content="" />
    <meta name="description" content="微信商家管理平台" />

    @*<script src="/js/jquery-1.10.2.min.js" type="text/javascript"></script>*@
    <link rel="stylesheet" href="/css/mylogin.css" />
</head>
<body>

    <div class="main">

        <div class="logo"></div>
        <div class="login_wrap">
           @using (Html.BeginForm("LogOn", "User"))
{
                <ul>
                    <li>
                        <input class="text" type="text" name="username" tabindex="1" placeholder="请输入用户名" />
                        <span class="wrong">账户名不存在</span>
                    </li>
                    <li>
                        <input class="text" type="password" name="password" tabindex="1" placeholder="请输入密码" />
                        <span class="wrong">密码错误</span>
                    </li>
                    <li><input name="submit" type="submit" class="submit" value="登录" /></li>
                </ul>
           }
            <p><a class="theme-login">忘记密码</a></p>
        </div>

        <div id="ft" class="wp cl">
            <p class="xs0">
                Copyright ©&nbsp; 2005-2014 &nbsp;&nbsp;&nbsp;金恒富中.&nbsp; All Rights Reserved.&nbsp;&nbsp;&nbsp; ICP备案号：15040731
            </p>
        </div>
    </div>




    <!------------忘记密码弹出框--------------------->
    <script>
        jQuery(document).ready(function ($) {
            $('.theme-login').click(function () {
                $('.theme-popover-mask').fadeIn(100);
                $('.theme-popover').slideDown(200);
            })
            $('.theme-poptit .close').click(function () {
                $('.theme-popover-mask').fadeOut(100);
                $('.theme-popover').slideUp(200);
            })
        })
    </script>
    <div class="theme-popover" style="display:none;">
        <div class="theme-poptit">
            <a href="javascript:;" title="关闭" class="close"></a>
            <h2>重置密码</h2>
        </div>

        <div class="theme-popbod">
            <form class="theme-signin" name="loginform" action="" method="post">
                <ul class="formli">
                    <li>
                        <div class="txtbox">
                            <label>手机号码：</label><input type="text" class="txt" maxlength="11" placeholder="请输入手机号" id="phone" />
                        </div>
                        <p class="input-tip"><span class="errortip">手机号码错误</span></p>
                    </li>
                    <li>
                        <div class="txtbox w290 on">
                            <label>验证码：</label>
                            <input type="text" class="txt" placeholder="请输入手机验证码" id="checkcode" />
                        </div>
                        <div>
                            <button id="" class="surebtn">发送验证码</button>
                            <!--<button  id="" class="surebtn surebtnon"><span id="">60</span>秒后重置</button>

                            <button  id="" class="surebtn">重新发送验证码</button>-->
                        </div>
                        <p class="input-tip"><span class="errortip">验证码超时</span></p>
                    </li>
                    <li>
                    </li>
                    <li>
                        <div class="txtbox on">
                            <label>
                                新密码：
                            </label>
                            <input type="password" class="txt" id="pwd" maxlength="16" />
                        </div>
                        <p class="input-tip"><span class="errortip">密码不能为空</span></p>
                    </li>

                </ul>
            </form>

            <span class="button_password"><button type="button">设置新密码</button></a></span>
        </div>
    </div>

    <div class="theme-popover-mask" style="display:none;"></div>

    <!------------忘记密码弹出框--------------------->


</body>
</html>
